{
  "presets": ["@babel/preset-env", "@babel/preset-react"],
  "plugins": [
    ["lodash", { "id": ["lodash", "recompose"] }],
    ["@babel/proposal-class-properties", { loose: true }]
  ],
  "env": {
    "commonjs": {
      "presets": ["@babel/preset-env", "@babel/preset-react"]
    },
    "coverage": {
      "presets": ["env", "react"],
      "plugins": [ [ "istanbul", { "ignore": "test" } ] ]
    }
  }
}
